{
  "manifest_version": 3,
  "name": "Ortex Alert",
  "version": "1.0.0",
  "description": "Alerts when Ortex's Interesting Options Flow shows abnormally high volume",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "https://app.ortex.com/s/ARCA/*",
        "https://app.ortex.com/options?tab=interesting-options-flow"
      ],
      "js": ["content.js"],
      "css": ["popup.css"]
    }
  ]
}
